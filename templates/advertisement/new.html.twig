{% extends 'app.html.twig' %}

{% block title %}{{ 'title.advertisement_new'|trans }}{% endblock %}

{% block main %}
    <h1>{{ 'title.advertisement_new'|trans }}</h1>

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.publishedAt) }}

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create'|trans }}
    </button>
    {{ form_end(form) }}
{% endblock %}
